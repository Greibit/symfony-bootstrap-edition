<div>
    <div class="float-left">
        <a class="btn btn-default" href="{{ "{{ path('"~ route_name_prefix ~"') }}" }}">
            <span class="glyphicon glyphicon-{{ action_icons['index'] }}"></span> {{ "{{ 'views.recordactions.backtothelist'|trans({}, 'GreibitCrudGeneratorBundle') }}" }}
        </a>
    </div>
{% if ('edit' in actions) and (not hide_edit) %}
    <div class="float-left">
        <a class="btn btn-primary" href="{{ "{{ path('"~ route_name_prefix ~"_edit', { 'id': entity.id }) }}" }}">
            <span class="glyphicon glyphicon-{{ action_icons['edit'] }}"></span> {{ "{{ 'views.recordactions.edit'|trans({}, 'GreibitCrudGeneratorBundle') }}" }}
        </a>
    </div>
{% endif %}
{% if ('delete' in actions) and (not hide_delete) %}
    <div class="float-left">
        <form action="{{ "{{ path('"~ route_name_prefix ~"_delete', { 'id': entity.id }) }}" }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ '{{ form_widget(delete_form) }}' }}
            <button class="btn btn-danger" type="submit" onclick="return confirm('{{ "{{ 'views.recordactions.confirm'|trans({}, 'GreibitCrudGeneratorBundle') }}" }}');"><span class="glyphicon glyphicon-{{ action_icons['delete'] }}"></span> {{ "{{ 'views.recordactions.delete'|trans({}, 'GreibitCrudGeneratorBundle') }}" }}</button>
        </form>
    </div>
{% endif %}
</div>